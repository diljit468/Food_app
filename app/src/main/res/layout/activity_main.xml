<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Gold Star Chili"
        android:gravity="center"
        android:id="@+id/title"
        android:textSize="20dp"
        android:textColor="#000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:id="@+id/view"
        android:background="#A6A6A6"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/view"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Welcome Gold star chill"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/round_edittext"
                android:layout_height="40dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:id="@+id/foodSpinner"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/round_edittext"
                android:layout_height="40dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/foodItemSpinner"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/mainLL">


            <TextView
                android:layout_width="match_parent"
                android:id="@+id/itemName"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/itemDes"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/ivItem"/>
                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/progressBar"
                    />
            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etQty"
                android:layout_marginTop="10dp"
                android:text="1"
                android:hint="Enter the Quantity"
                android:inputType="number"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTotalPrice"
                android:layout_marginTop="10dp"
                android:text="10"
                android:gravity="center"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/radioGroup"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="DineIn"
                    android:id="@+id/pick"
                    ></RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DineOut"
                    android:id="@+id/delivery"
                    android:layout_marginLeft="20dp"
                    ></RadioButton>
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnBuy"
                android:layout_marginTop="10dp"
                android:text="Buy Item"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <ProgressBar
        android:layout_width="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/mainProgress"
        android:layout_height="30dp"/>
</RelativeLayout>